<?xml version="1.0" ?>
<sdf version="1.7">
  <model name="trolley">
    <pose>0 0 0 0 0 0</pose>
    <!-- Simple rectangular chassis -->
    <link name="base_link">
      <pose>0 0 0.2 0 0 0</pose>
      <visual name="body_visual">
        <geometry>
          <box>
            <size>0.8 0.5 0.4</size>
          </box>
        </geometry>
        <material>
          <ambient>0.4 0.4 0.4 1</ambient>
          <diffuse>0.8 0.8 0.8 1</diffuse>
        </material>
      </visual>
      <collision name="body_collision">
        <geometry>
          <box>
            <size>0.8 0.5 0.4</size>
          </box>
        </geometry>
      </collision>
      <inertial>
        <mass>10.0</mass>
      </inertial>
    </link>

    <!-- Camera Sensor (front center) -->
    <link name="camera_link">
      <pose>0.35 0 0.5 0 0 0</pose>
      <sensor name="my_camera" type="camera">
        <!-- Insert the contents of your camera_1/model.sdf sensor element here (without <model> or <link>). -->
        <!-- Add <topic>/trolley/camera/image_raw</topic> if using Ignition Gazebo. -->
      </sensor>
    </link>

    <!-- RGB-D Camera Sensor (front left) -->
    <link name="rgbd_camera_link">
      <pose>0.2 0.18 0.5 0 0 0</pose>
      <sensor name="my_rgbd_camera" type="depth">
        <!-- Insert the contents of your rgbd_camera_1/model.sdf sensor element here. -->
      </sensor>
    </link>

    <!-- Ultrasonic Sensor (front right, low) -->
    <link name="ultrasonic_link">
      <pose>0.2 -0.18 0.25 0 0 0</pose>
      <sensor name="my_ultrasonic" type="ray">
         <camera>
    <horizontal_fov>1.57</horizontal_fov> <!-- ~90deg -->
    <image>
      <width>640</width>
      <height>480</height>
      <format>R8G8B8</format>
    </image>
    <clip>
      <near>0.1</near>
      <far>100</far>
    </clip>
  </camera>
  <always_on>true</always_on>
  <update_rate>30.0</update_rate>
  <visualize>true</visualize>

    <camera_name>my_camera</camera_name>
    <image_topic_name>image_raw</image_topic_name>
    <camera_info_topic_name>camera_info</camera_info_topic_name>
    <frame_name>camera_link</frame_name>

      </sensor>
    </link>
  </model>
</sdf>
